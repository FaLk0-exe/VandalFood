@model VandalFood.Models.Authorization.AuthorizationModel

@{
    ViewData["Title"] = "SignIn";
}

<h1>Авторизація</h1>

<h4>Введіть свої дані</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TrySignIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label">Логін</label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <span>Немає облікового запису?</span>     <a asp-controller="Account" asp-action="SignUp">Зареєструватися</a>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Увійти" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <span class="text-danger">@(ViewData["message"] ?? "")</span>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
