@using VandalFood.BLL.Helpers;
@model VandalFood.DAL.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeftName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeftName)
        </dd>
        @foreach(var contact in Model.CustomerContacts)
        {
            <dt class="col-sm-2">
                @ContactTypeHelper.GetTitle(contact.ContactTypeId)
            </dt>
            <dd class="col-sm-10">
                @contact.Value
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Редагувати", "Edit") |
    <a asp-action="Get" asp-controller="Product">До каталогу</a>
</div>
