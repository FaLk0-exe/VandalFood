@using VandalFood.BLL.Helpers;
@using VandalFood.DAL.Enums;
@model IEnumerable<VandalFood.DAL.Models.CustomerOrder>

@{
    ViewData["Title"] = "Get";
}

<h1>Поточний перелік замовлень</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Номер замовлення
            </th>
            <th>
                Дата замовлення
            </th>
            <th>
                Номер телефону
            </th>
            <th>
                Ім'я клієнта
            </th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id.ToString("D4")</td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderContacts.FirstOrDefault(s=>s.ContactTypeId==(int)ContactTypeEnum.Phone).Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.ActionLink("Деталі", "Details", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
